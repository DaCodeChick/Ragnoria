# Example environment configuration for Ragnoria
# Copy this file to .env and customize
# Loaded via dotenvy crate (maintained fork of dotenv)

# Database connection
DATABASE_URL=sqlite://ragnoria.db
# DATABASE_URL=mysql://user:password@localhost/ragnoria

# Server configuration
LOGIN_PORT=7101
LOBBY_PORT=7201
WORLD_PORT=7401

# Logging level
RUST_LOG=info
# RUST_LOG=debug

# Session settings
SESSION_TTL_SECONDS=3600

# Security
# RSA_KEY_SIZE=2048
# AES_KEY_SIZE=128
